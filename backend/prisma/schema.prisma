generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/generated/tenant"
}

datasource db {
  provider = "postgresql"
  url      = env("TENANT_DATABASE_URL") // usado apenas para migração
}

model Usuario {
  id     Int    @id @default(autoincrement())
  nome   String
  email  String @unique
  senha  String
  role   Role
}

model Produto {
  id     Int    @id @default(autoincrement())
  nome   String
  preco  Float
  ativo  Boolean @default(true)
}

enum Role {
  admin
  consumidor
}